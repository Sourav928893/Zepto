<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zepto_bg"
    android:padding="20dp"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tagline"
        android:layout_marginTop="120dp"
        android:text="Groceries\ndelivered in \n10 minutes"
        android:paddingLeft="28dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="serif-monospace"
        android:textSize="12sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/phoneInput"
        android:layout_below="@id/tagline"
        android:layout_marginHorizontal="20dp"
        android:hint="+91 Enter Phone Number"
        android:background="@drawable/edittext_background"
        android:inputType="phone"
        android:textColorHint="#999999"
        android:textSize="16sp"
        android:padding="15dp"
        android:layout_marginTop="10dp"
    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/continueButton"
        android:layout_below="@id/phoneInput"
        android:layout_marginTop="20dp"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:backgroundTint="@color/pink"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/termText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="By Continuing, you agree to our \nTerms of use and privacy policy"
        android:paddingLeft="28dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="serif-monospace"
        android:textSize="14sp"
        android:gravity="center"
        />
</RelativeLayout>